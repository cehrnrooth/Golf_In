<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to  ("Golf "+image_tag('LinkedIn_IN_Icon_25px.jpg', :size => '20x1', :style => "border-radius: 3px; position:relative; top:-2px; left:-4px;")).html_safe, root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
		
		  <% if session[:atoken].nil? %>
		  <% else %>
          <li><%= link_to ('<i class="icon-home icon-white"></i> Home').html_safe,    root_path %></li>

          <li><%= link_to ('<i class="icon-search icon-white"></i> Search').html_safe, players_path %></li>
          <% end %>

		  <% if session[:atoken].nil? %>
		  <li><%= link_to "Log in", login_path %></li>
		  <% else %>
		
			<% if current_player.nil? %>
				<li id="fat-menu" class="dropdown">
	              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-wrench icon-white"></i>Settings <b class="caret"></b></a>
	                <ul class="dropdown-menu">
					<li><%= link_to "Create Profile", signup_path %></li>
					<li class="divider"></li>
					<li><%= link_to "Sign out", logout_path %></li>
					
			<% else %>
		  
		  <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> My Profile <b class="caret"></b></a>
                <ul class="dropdown-menu">
               <li><%= link_to "View Profile", current_player %></li>
			   <li><%= link_to "Update Profile", edit_player_path(current_player) %></li>
               <li class="divider"></li>
               <li><%= link_to "Sign out", logout_path %></li>

			<% end %>
			<% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>